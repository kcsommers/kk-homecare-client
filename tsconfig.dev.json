{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@kk/components": [
        "projects/experiments/src/public-api.ts"
      ],
      "@kk/core": [
        "projects/core/src/public-api.ts"
      ],
      "@kk/app-shell": [
        "projects/app-shell/src/public-api.ts"
      ],
      "@kk/admin": [
        "projects/admin/src/public-api.ts"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "./dist"
  ]
}
